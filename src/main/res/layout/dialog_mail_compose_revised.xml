<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="20dp"
    tools:ignore="ContentDescription">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/compose_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:tint="@color/BASE_COLOR"
            android:id="@+id/compose_cancel_button"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/compose_send_button"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:tint="@color/BASE_COLOR"
            android:src="@drawable/ic_send_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/compose_cancel_button"
            android:text="@string/compose_message"
            android:textColor="@color/COMPLIMENTARY_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/text_large_bold"
            android:id="@+id/compose_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/compose_control_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/student_email_here"
        android:id="@+id/compose_dialog_to_field"
        style="@style/text_large"
        android:background="@null"
        android:layout_marginVertical="10dp"
        android:autofillHints="Email"
        android:inputType="textEmailAddress" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/BASE_COLOR"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/compose_dialog_header"
        style="@style/text_large"
        android:inputType="text"
        android:background="@null"
        android:layout_marginVertical="10dp"
        tools:ignore="Autofill,LabelFor"
        android:hint="@string/subject_here"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/BASE_COLOR"/>

    <EditText
        android:hint="@string/enter_your_reply_here"
        android:id="@+id/compose_dialog_text"
        style="@style/text_large"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autofillHints="Your reply"
        android:background="@drawable/blankbackground"
        android:gravity="top|start"
        android:inputType="textMultiLine|textCapSentences"
        android:maxLines="100"
        android:minLines="100"
        tools:ignore="LabelFor"
        android:scrollbars="vertical"/>
</LinearLayout>