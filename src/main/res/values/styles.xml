<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="tabItemText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loadingBars">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="text_regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_header_lv_1">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_header_lv_2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="calendar_textview" parent="text_regular">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="my_progress_bar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_height">@dimen/progress_bar_height</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:progressDrawable">@drawable/progress_background</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="text_base">
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_base_bold" parent="text_base">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_base_italic" parent="text_base">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="text_base_bold_italic" parent="text_base">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="text_large" parent="text_base">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_small" parent="text_base">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_large_bold" parent="text_base">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_xlarge" parent="text_base">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_xlarge_bold" parent="text_base">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_extra_large_bold" parent="text_base">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_small_bold" parent="text_base">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_link">
        <item name="android:textColor">@color/com_facebook_blue</item>
    </style>

    <style name="BottomOptionsDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
